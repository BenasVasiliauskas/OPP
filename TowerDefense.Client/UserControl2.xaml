<UserControl x:Class="TowerDefense.Client.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TowerDefense.Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="ActionLoaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="auto"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Border BorderThickness="0, 0, 5, 0" Grid.Column="0" BorderBrush="Black">
            <Canvas x:Name="canvas" Background="Transparent" MouseLeftButtonDown="Canvas_Click"></Canvas>
        </Border>
        <Grid Grid.Column="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition Height="auto"></RowDefinition>
            </Grid.RowDefinitions>
            <Border BorderThickness="1" BorderBrush="Black">
                <Grid Grid.Row="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"></RowDefinition>
                        <RowDefinition Height="*"></RowDefinition>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                        <ColumnDefinition Width="auto"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="1" BorderBrush="Black" Grid.Row="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Row="0" Grid.Column="0" Content="Enemies" HorizontalAlignment="Center"></Label>
                        </Grid>
                    </Border>

                    <Button Margin="20" Grid.Row="1" Grid.Column="0" Click="Create_Shooting_Enemy_Button_Click" Background="Transparent" BorderThickness="0">
                        <Image Source="Images/Enemies/man-with-gun.png" />
                    </Button>
                    <Button Margin="20" Grid.Row="1" Grid.Column="1" Click="Create_Healing_Enemy_Button_Click" Background="Transparent" BorderThickness="0">
                        <Image Source="Images/Enemies/priest.png" />
                    </Button>
                </Grid>
            </Border>
            <Button Content="Power up" HorizontalAlignment="Left" Margin="65,59,0,0" Grid.Row="2" VerticalAlignment="Top" Click="PowerUp_Click"/>

            <!--<Button x:Name="STOWER" Content="ENEMY" Canvas.Left="83" Canvas.Top="350" Click="Button_Click"/>
            <Button x:Name="TowerButton" Content="TOWER" Canvas.Left="164" Canvas.Top="350" Click="TowerButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button x:Name="PowerUp" Content="POWERUP" Canvas.Left="251" Canvas.Top="350" Click="PowerUp_Click"/>-->
        </Grid>
    </Grid>
</UserControl>
