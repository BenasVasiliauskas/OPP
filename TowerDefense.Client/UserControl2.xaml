<UserControl x:Class="TowerDefense.Client.UserControl2"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TowerDefense.Client"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" Loaded="ActionLoaded">
    <Canvas x:Name="canvas" Background="Transparent" MouseLeftButtonDown="Canvas_Click">
        <Button x:Name="STOWER" Content="ENEMY" Canvas.Left="83" Canvas.Top="350" Click="Button_Click"/>
        <Button Content="Change level" Canvas.Left="481" Canvas.Top="72" Click="Button1_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <TextBox x:Name="TowerName" Canvas.Left="628" TextWrapping="Wrap" Text="TextBox" Canvas.Top="72" Width="120"/>
        <Button x:Name="TowerButton" Content="TOWER" Canvas.Left="164" Canvas.Top="350" Click="TowerButton_Click" HorizontalAlignment="Left" VerticalAlignment="Center"/>
        <Button x:Name="PowerUp" Content="POWERUP" Canvas.Left="251" Canvas.Top="350" Click="PowerUp_Click"/>
    </Canvas>
</UserControl>
